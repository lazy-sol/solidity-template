{
	"name": "solidity-template",
	"version": "1.0.2",
	"description": "Preconfigured Solidity dev env: Hardhat/Web3/Truffle, Infura, Etherscan",
	"main": "index.js",
	"engines": {
		"node": ">=16.20.0"
	},
	"scripts": {
		"clean": "hardhat clean",
		"compile": "hardhat compile",
		"test": "hardhat test",
		"coverage": "hardhat coverage",
		"deploy-goerli": "hardhat deploy --network goerli",
		"verify-goerli": "hardhat etherscan-verify --network goerli --config hardhat.config-escan.js",
		"deploy-mumbai": "hardhat deploy --network mumbai",
		"verify-mumbai": "hardhat etherscan-verify --network mumbai --config hardhat.config-pscan.js",
		"deploy-binance_testnet": "hardhat deploy --network binance_testnet",
		"verify-binance_testnet": "hardhat etherscan-verify --network binance_testnet --config hardhat.config-bscan.js",
		"deploy-mainnet": "hardhat deploy --network mainnet",
		"verify-mainnet": "hardhat etherscan-verify --network mainnet --config hardhat.config-escan.js",
		"deploy-polygon": "hardhat deploy --network polygon",
		"verify-polygon": "hardhat etherscan-verify --network polygon --config hardhat.config-pscan.js",
		"deploy-binance": "hardhat deploy --network binance",
		"verify-binance": "hardhat etherscan-verify --network binance --config hardhat.config-bscan.js"
	},
	"keywords": [],
	"author": "Basil Gorin",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/vgorin/solidity-template.git"
	},
	"bugs": {
		"url": "https://github.com/vgorin/solidity-template/issues"
	},
	"homepage": "https://github.com/vgorin/solidity-template#readme",
	"devDependencies": {
		"@nomiclabs/hardhat-etherscan": "^3.1.7",
		"@nomiclabs/hardhat-truffle5": "^2.0.7",
		"@nomiclabs/hardhat-web3": "^2.0.0",
		"@openzeppelin/contracts": "4.9.3",
		"@openzeppelin/contracts-upgradeable": "4.9.3",
		"@openzeppelin/test-helpers": "^0.5.15",
		"chai": "^4.3.8",
		"dotenv": "^16.3.1",
		"hardhat": "^2.17.1",
		"hardhat-dependency-compiler": "^1.1.3",
		"hardhat-deploy": "^0.11.37",
		"hardhat-gas-reporter": "^1.0.8",
		"loglevel": "^1.8.1",
		"solidity-coverage": "^0.8.4",
		"truffle-contract-size": "^2.0.1",
		"truffle-plugin-verify": "^0.6.5"
	},
	"overrides": {
		"minimatch": "^3.0.5",
		"yargs-parser": "^5.0.1",
		"flat": "^5.0.1",
		"eth-gas-reporter": "^0.0.5",
		"lodash": "^4.17.20",
		"shelljs": "^0.8.4"
	}
}
